@model LdapSettings

@{
    ViewData["Title"] = "Configurações Ldap";
}

<header class="header header-sticky p-0 mb-4">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item">
                    <a data-coreui-i18n="home" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item active">
                    <span data-coreui-i18n="dashboard">Ldap</span>
                </li>
            </ol>
        </nav>
    </div>
</header>

<div>
    <div class="container-lg px-4">
        <div class="card mb-4">
            <div class="card-header"><strong>@ViewData["Title"]</strong></div>
            <div class="card-body">
                <form id="formLdap" enctype="multipart/form-data" asp-action="Ldap">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FqdnDomain" class="control-label"></label>
                        <input asp-for="FqdnDomain" class="form-control" />
                        <span asp-validation-for="FqdnDomain" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Port" class="control-label"></label>
                        <input asp-for="Port" class="form-control" />
                        <span asp-validation-for="Port" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NetBiosDomain" class="control-label"></label>
                        <input asp-for="NetBiosDomain" class="form-control" />
                        <span asp-validation-for="NetBiosDomain" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BaseDn" class="control-label"></label>
                        <input asp-for="BaseDn" class="form-control" />
                        <span asp-validation-for="BaseDn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDn" class="control-label"></label>
                        <input asp-for="UserDn" class="form-control" />
                        <span asp-validation-for="UserDn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="form-group modal-footer">
                <input type="submit" form="formLdap" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>
