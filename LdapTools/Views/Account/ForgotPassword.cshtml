@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Recuperar Senha";
    Layout = "_LayoutPassword";
}


<div class="recovery-message">Informe a matrícula para receber um link de recuperação de senha no seu e-mail institucional.</div>
<form enctype="multipart/form-data" asp-action="ForgotPassword" method="post">
    <div class="field">
         <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" /></svg>
         <input asp-for="Username" id="ft_un" type="text" placeholder="Matrícula" autocorrect="off" autocapitalize="off" required>
    </div>
    <input type="hidden" asp-for="FortigateToken" />
    <button class="primary" type="submit">Enviar</button>
</form>