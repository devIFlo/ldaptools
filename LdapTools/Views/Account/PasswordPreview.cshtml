@{
    Layout = null; // importante: evita o layout duplicar a estrutura
    ViewData["Title"] = "Pré-visualização da página de recuperação de senha";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/password.css" />
</head>
<body>
    <div class="container">
        <div class="left" style="background: linear-gradient(to bottom, @Model.PrimaryColor, @Model.SecundaryColor)">
            <div class="logo" style="
                background-image: url('/images/password.png');
                background-size: contain;
                background-repeat: no-repeat;
                background-position: center;
            "></div>
        </div>

        <div class="right">
            <div class="recovery-message">
                Informe a matrícula para receber um link de recuperação de senha no seu e-mail institucional.
            </div>

            <form>
                <div class="field">
                    <input type="text" placeholder="Matrícula" readonly />
                </div>

                <button class="primary" type="button"
                        style="background: linear-gradient(to right, @Model.SecundaryColor, @Model.PrimaryColor)">
                    Enviar
                </button>
            </form>
        </div>
    </div>

    <!-- Overlay transparente para bloquear interação -->
    <div style="position: fixed; inset: 0; background: transparent; z-index: 1000;"></div>
</body>
</html>
