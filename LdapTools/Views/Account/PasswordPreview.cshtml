@{
    Layout = null; // importante: evita o layout duplicar a estrutura
    ViewData["Title"] = "Pré-visualização da página de recuperação de senha";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <!-- Carrega o CSS que define .container, .left, .right, .logo, etc. -->
    <link rel="stylesheet" href="~/css/password.css" />
</head>
<body>
    <div class="container">
        <div class="left">
            <div class="logo"></div>
        </div>

        <div class="right">
            <div class="recovery-message">
                Informe a matrícula para receber um link de recuperação de senha no seu e-mail institucional.
            </div>

            <form>
                <div class="field">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4
                        1.79 4 4 4zm0 2c-2.67 0-8
                        1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                    </svg>
                    <input type="text" placeholder="Matrícula" readonly />
                </div>

                <button class="primary" type="button">Enviar</button>
            </form>
        </div>
    </div>

    <!-- Overlay transparente para bloquear interação -->
    <div style="position: fixed; inset: 0; background: transparent; z-index: 1000;"></div>
</body>
</html>
