@model UsersEditViewModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<header class="header header-sticky p-0 mb-4">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item">
                    <a data-coreui-i18n="home" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a data-coreui-i18n="home" asp-controller="Users" asp-action="Index">Usuários</a>
                </li>
                <li class="breadcrumb-item active">
                    <span data-coreui-i18n="dashboard">@Model.UserName</span>
                </li>
            </ol>
        </nav>
    </div>
</header>

<div>
    <div class="container-lg px-4">
        <div class="card mb-4">
            <div class="card-header"><strong>@ViewData["Title"]</strong></div>
            <div class="card-body">
                <form id="formEdit" enctype="multipart/form-data" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <div>
                        <p>Usuário: @Model.UserName</p>
                    </div>
                    <div class="form-group">
                        <label asp-for="SelectedRole" class="control-label"></label>
                        <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.Roles, "Name", "Name"))"></select>
                    </div>
                </form>
            </div>
            <div class="form-group modal-footer">
                <a class="btn btn-secondary" asp-controller="Users" asp-action="Index">Voltar</a>
                <input type="submit" form="formEdit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>