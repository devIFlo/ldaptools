@{
    var config = ViewBag.Config as LdapTools.Models.ForgotConfig ?? new LdapTools.Models.ForgotConfig();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LdapTools</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" />
    <link rel="stylesheet" href="~/css/password.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: @(config.PrimaryColor);
            --secondary-color: @(config.SecundaryColor);
        }

        .left {
            background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
        }

        .right form button {
            background: linear-gradient(to right, var(--secondary-color), var(--primary-color));
        }

            .right form button.primary:hover {
                background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            }

        .spinner {
            border-top: 4px solid var(--primary-color);
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="left">
            <div class="logo"></div>
        </div>
        <div class="right">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>