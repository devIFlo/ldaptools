@model LogViewModel
@{
    ViewData["Title"] = "Logs do Sistema";
}

<header class="header header-sticky p-0 mb-4">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item">
                    <a data-coreui-i18n="home" asp-controller="Home" asp-action="Index">Início</a>
                </li>
                <li class="breadcrumb-item active">
                    <span data-coreui-i18n="dashboard">Logs</span>
                </li>
            </ol>
        </nav>
    </div>
</header>

<div>
    <div class="container-lg px-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <strong>@ViewData["Title"]</strong>
            </div>

             <div class="card-body">
                <form method="get" class="row mb-4">
                    <div class="col-md-2">
                        <label>Data Inicial</label>
                        <input type="date" name="startDate" class="form-control"
                               value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="col-md-2">
                        <label>Data Final</label>
                        <input type="date" name="endDate" class="form-control"
                               value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="col-md-2">
                        <label>Nível</label>
                        <select name="logLevel" class="form-control">
                            <option value="0" selected="@(Model.LogLevel == 0)">All</option>
                            <option value="2" selected="@(Model.LogLevel == 2)">Information</option>
                            <option value="3" selected="@(Model.LogLevel == 3)">Warning</option>
                            <option value="4" selected="@(Model.LogLevel == 4)">Error</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>Buscar</label>
                        <input type="text" name="searchTerm" class="form-control"
                               value="@Model.SearchTerm" placeholder="Mensagem..." />
                    </div>

                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
                    </div>
                </form>

                <div class="table-responsive">
                    <table class="table table-hover" style="width:100%"">
                        <thead>
                            <tr>
                                <th class="text-center">Data</th>
                                <th class="text-center">Nível</th>
                                <th>Mensagem</th>
                                <th>Exceção</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.LogEntries != null && Model.LogEntries.Any())
                            {
                                foreach (var log in Model.LogEntries)
                                {
                                    <tr>
                                        <td class="text-center">@log.Timestamp?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="text-center">
                                            @switch (log.Level)
                                            {
                                                case 2:
                                                    <span class="badge bg-info text-dark">Information</span>
                                                    break;
                                                case 3:
                                                    <span class="badge bg-warning text-dark">Warning</span>
                                                    break;
                                                case 4:
                                                    <span class="badge bg-danger">Error</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">Unknown</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@log.Message</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(log.Exception))
                                            {
                                                <span data-bs-toggle="tooltip"
                                                      title="@log.Exception">
                                                    @(log.Exception.Length > 50
                                                        ? log.Exception.Substring(0, 50) + "..."
                                                        : log.Exception)
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">
                                        Nenhum registro encontrado.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginação -->
                @if (Model.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link"
                                       href="@Url.Action("Index", "Logs", new {
                                           page = i,
                                           startDate = Model.StartDate,
                                           endDate = Model.EndDate,
                                           logLevel = Model.LogLevel
                                       })">
                                        @i
                                    </a>
                                </li>
                            }

                        </ul>
                    </nav>
                }
            </div>
    </div>
    </div>
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}