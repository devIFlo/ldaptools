@model LdapUserViewModel

@{
    ViewData["Title"] = "Usuários do Active Directory";
}

<header class="header header-sticky p-0 mb-4">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item">
                    <a data-coreui-i18n="home" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item active">
                    <span data-coreui-i18n="dashboard">Active Directory</span>
                </li>
                <li class="breadcrumb-item active">
                    <span data-coreui-i18n="dashboard">Usuários</span>
                </li>
            </ol>
        </nav>
    </div>
</header>

<div>
    <div class="container-lg px-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <strong>@ViewData["Title"]</strong>  
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="input-group">
                            <input type="text" id="args" class="form-control" placeholder="Nome ou matrícula..." />
                            <button id="btnBuscar" class="btn btn-primary">Buscar</button>
                        </div>

                        <div id="ouTree" class="border rounded p-2 mt-2" style="height: 500px; overflow-y: auto;"></div>
                    </div>
                    <div class="col-md-9 table-responsive">
                        <table class="table table-hover" style="width:100%" id="userTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Username)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">
                            </tbody>
                        </table>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/themes/default/style.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/jstree.min.js"></script>

    <script>
        $(function () {
            // Inicializa o jsTree
            $('#ouTree').jstree({
                'core': {
                    'themes': { 'variant': 'large' },
                    'data': {
                        'url': function (node) {
                            if (node.id === '#') {
                                // Carrega a raiz
                                return '/ActiveDirectory/GetOuTree';
                            } else {
                                // Carrega sub-OUs dinamicamente
                                return '/ActiveDirectory/GetOuTree?parentDn=' + encodeURIComponent(node.id);
                            }
                        },
                        'dataType': 'json'
                    }
                },
                'plugins': ['wholerow']
            });

            // Quando o usuário clicar em uma OU, buscar os usuários dela
            $('#ouTree').on('select_node.jstree', function (e, data) {
                const ouDn = data.node.id;

                fetch(`/ActiveDirectory/GetUsers?ou=${encodeURIComponent(ouDn)}&recursive=false`)
                    .then(res => res.json())
                    .then(users => {
                        const tbody = $('#userTable tbody');
                        tbody.empty();

                        if (users.length === 0) {
                            tbody.append('<tr><td colspan="4" class="text-center text-muted">Nenhum usuário encontrado.</td></tr>');
                            return;
                        }

                        users.forEach(u => {
                            tbody.append(`
                                <tr>
                                    <td>${u.name || ''}</td>
                                    <td>${u.username || ''}</td>
                                    <td>${u.email || ''}</td>
                                </tr>
                            `);
                        });
                    })
                    .catch(err => console.error("Erro ao buscar usuários:", err));
            });

             // Evento de clique no botão Buscar
            $("#btnBuscar").on("click", function () {
                var args = $("#args").val();

                $.ajax({
                    url: '/ActiveDirectory/GetUsers',
                    type: 'GET',
                    data: {
                        args: args,
                        recursive: true
                    },
                    success: function (data) {
                        $("#userTable tbody").empty();

                        if (data.length === 0) {
                            $("#userTable tbody").append("<tr><td colspan='3'>Nenhum usuário encontrado.</td></tr>");
                        } else {
                            data.forEach(function (u) {
                                $("#userTable tbody").append(`
                                    <tr>
                                        <td>${u.name}</td>
                                        <td>${u.username}</td>
                                        <td>${u.email ?? ''}</td>
                                    </tr>
                                `);
                            });
                        }
                    },
                    error: function () {
                        alert("Erro ao buscar usuários.");
                    }
                });
            });
        });
    </script>
}
