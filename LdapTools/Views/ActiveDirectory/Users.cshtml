@{
    ViewData["Title"] = "Usuários do Active Directory";
}

<header class="header header-sticky p-0 mb-4">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Active Directory</li>
                <li class="breadcrumb-item active">Usuários</li>
            </ol>
        </nav>
    </div>
</header>

<div class="container-lg px-4">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>@ViewData["Title"]</strong>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="input-group">
                        <input type="text" id="args" class="form-control" placeholder="Nome ou matrícula..." />
                        <button id="btnBuscar" class="btn btn-primary">Buscar</button>
                    </div>

                    <div id="ouTree" class="border rounded p-2 mt-2" style="height: 500px; overflow-y: auto;"></div>
                </div>

                <div class="col-md-9">
                    <div id="usersContainer">
                        <div class="text-center text-muted mt-5">Selecione uma OU ou pesquise por nome/matrícula.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/themes/default/style.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/jstree.min.js"></script>

    <script>
        let currentOu = null;
        let currentArgs = null;

        $(function () {
            $('#ouTree').jstree({
                'core': {
                    'themes': { 'variant': 'large' },
                    'data': {
                        'url': function (node) {
                            return node.id === '#'
                                ? '/ActiveDirectory/GetOuTree'
                                : '/ActiveDirectory/GetOuTree?parentDn=' + encodeURIComponent(node.id);
                        },
                        'dataType': 'json'
                    }
                },
                'plugins': ['wholerow']
            });

            $('#ouTree').on('select_node.jstree', function (e, data) {
                currentOu = data.node.id;
                currentArgs = null;
                loadUsers(1);
            });

            $('#btnBuscar').on('click', function () {
                const value = $('#args').val().trim();

                // Se campo está vazio, não faz nada (toast vem do backend)
                if (!value) {
                    return;
                }

                currentOu = null;
                currentArgs = value;
                loadUsers(1, true);
            });

            // Paginação AJAX
            $(document).on('click', '.pagination a', function (e) {
                e.preventDefault();
                const href = $(this).attr('href');
                const params = new URLSearchParams(href.split('?')[1]);
                const page = params.get('page') || 1;
                loadUsers(page);
            });
        });

        function loadUsers(page = 1, recursive = false) {
            const params = new URLSearchParams({
                ou: currentOu || '',
                args: currentArgs || '',
                recursive: recursive,
                page: page
            });

            $('#usersContainer').load(`/ActiveDirectory/UsersTable?${params.toString()}`);
        }
    </script>
}
